pipeline {
    agent any

    stages {
        stage('Build') {

            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                 ls -lart
                 node --version
                 npm --version
                 npm ci
                 npm run build
                 ls -lart
                '''
            }
        }

        stage('Test') {
            steps {
                sh 'test -f build/index.html'
            }
        }
    }
}
